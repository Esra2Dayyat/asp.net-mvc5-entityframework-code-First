@model amazon.Models.Order

@{
    ViewBag.Title = "Create_order";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="container">
    <div class="row">

        <div class="col-lg-3">




            <img src="@Url.Content(@ViewBag.imgpath)" />
            <h1>

                @ViewData["imgprice"]$
            </h1>
        </div>


        <div class="col-md-6">
            <div class="form-group">
                @Html.Label("AdressId", "Dilivery Adress" , htmlAttributes: new { @class = "control-label"  })
            <br />
                    @Html.DropDownListFor(model => model.AdressId, ViewBag.Adress as IEnumerable<SelectListItem>
        , htmlAttributes: new { @class = "form-control col-md-4 " })

                    @Html.ValidationMessageFor(model => model.AdressId, "", new { @class = "text-danger" })

              
            </div>
            <br />
            <div class="form-group">

                @Html.LabelFor(model => model.OrderDate, htmlAttributes: new { @class = "control-label", @for = "txtorderdate" })

                <br />
                @Html.TextBoxFor(model => model.OrderDate, DateTime.Now.ToString("dd/MMM/yyyy"), new
        {
            id = "txtorderdate",
            @class = "form-control",
            @readonly = true
        })



                @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })

            </div>



            <div class="form-group">

                @Html.Label("lblprive", "Price", new { @class = "control-label ", @for = "txtprice" })

                @Html.TextBox("txtprice", @ViewData["imgprice"] + "$", new { @readonly = "true", @class = "form-control" })



                @Html.ValidationMessageFor(model => model.GetOrder.Price, "", new { @class = "text-danger" })




            </div>

            <div class="form-group">

                <input id="ImgId" name="ImgId" type="hidden" value="@ViewBag.ProductID" />

            </div>
            <div class="col-md-offset-3 ">

                <input type="submit" value="Buy " class="btn btn-warning " />
            </div>
            <br />
            <div class=" col-md-offset-2">
                @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-default  btn-lg" })

            </div>
            <br />
        </div>
    </div>

</div>


        }


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
