@model IEnumerable<amazon.Models.Imgeupload>

@{
    ViewBag.Title = "Home Page";

}

<div> <h4> Welcomw Have You Nice Time   @Session["nameuser"]   </h4> </div>

<div class="slider" id="slider">

    <div class="holder">
        @foreach (var item in Model)
        {


            if (item.ImgId == 9)
            {
                break;
            }
            <div class="slide">
                <div class="clearfix">
                    <img src="@Url.Content(item.ImgPath)" />
                </div>
                <div>
                    @Html.ActionLink("buy now ", "Create", "Orders", new { @id = item.ImgId, @imgpath = item.ImgPath }, new
                    {
                        @class = "btn btn-default",
                        onclick = "return confirm ('Are you Sure to buy');"
                    }
         )
                </div>
            </div>
        }
    </div>
</div>

<div class="slider" id="slider">

    <div class="holder">
        @foreach (var item in Model)

        {
            if (++item.ImgId >= 10)
            {


                <div class="slide" id="slide-0">
                    <div class="clearfix">
                        <img src="@Url.Content(item.ImgPath)" />
                    </div>

                    <div>
                        @Html.ActionLink("buy now ", "Create", "Orders", new { @id = item.ImgId, @imgpath = item.ImgPath }, new
                        {
                            @class = "btn btn-default",
                            onclick = "return confirm ('Are you Sure to buy');"
                        }
         )
                    </div>
                </div>
            }
        }

    </div>

</div>






